services:
  - name: "hub-ca-auth"
    type: "json"
    description: "Hub CA Auth Service logs"
    path_pattern: "/syslog/application_logs/{YYYY}/{MM}/{DD}/{HH}/hub-ca-auth-kinesis-*"
    path_date_formats: ["{YYYY}", "{MM}", "{DD}", "{HH}"]
    # Maps to Sentry project (locale-agnostic: hub-ca-auth + hub-us-auth → auth-service)
    sentry_service_name: "auth-service"
    # Per-service Sentry DSN
    sentry_dsn: "https://abc123@sentry.example.com/4"
  
  - name: "hub-us-api"
    type: "json"
    description: "Hub US API logs"
    path_pattern: "/syslog/application_logs/{YYYY}/{MM}/{DD}/{HH}/hub-us-api-kinesis-*"
    path_date_formats: ["{YYYY}", "{MM}", "{DD}", "{HH}"]
    # hub-us-api → api-service (matches hub-ca-api)
    sentry_service_name: "api-service"
    # Per-service Sentry DSN
    sentry_dsn: "https://def456@sentry.example.com/5"
